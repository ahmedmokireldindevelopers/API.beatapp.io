# Supabase
SUPABASE_URL=YOUR_SUPABASE_URL
SUPABASE_SERVICE_ROLE_KEY=YOUR_SUPABASE_SERVICE_ROLE_KEY
SUPABASE_SECRET_KEY=YOUR_SUPABASE_SECRET_KEY
SUPABASE_PUBLISHABLE_KEY=YOUR_SUPABASE_PUBLISHABLE_KEY
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY

# GoHighLevel / LeadConnector OAuth
GHL_CLIENT_ID=YOUR_GHL_CLIENT_ID
GHL_CLIENT_SECRET=YOUR_GHL_CLIENT_SECRET
GHL_TOKEN_URL=YOUR_GHL_TOKEN_URL
GHL_REDIRECT_URI=https://api.beatapp.io/api/oauth/crm/callback

# HighLevel SDK auth (recommended to set one of the following modes)
# Mode A: Private Integration Token (PIT)
HIGHLEVEL_PIT=
# Optional alias also supported by this code:
GHL_PIT=

# Mode B: OAuth credentials
HIGHLEVEL_CLIENT_ID=YOUR_GHL_CLIENT_ID
HIGHLEVEL_CLIENT_SECRET=YOUR_GHL_CLIENT_SECRET

# Wafeq API Key flow (alternative)
WAFEQ_PROBE_URL=https://api.wafeq.com/v1/organization

# Wafeq OAuth (optional - only if enabled for your app)
WAFEQ_CLIENT_ID=YOUR_WAFEQ_CLIENT_ID
WAFEQ_CLIENT_SECRET=YOUR_WAFEQ_CLIENT_SECRET
WAFEQ_AUTHORIZE_URL=https://app.wafeq.com/oauth/authorize/
WAFEQ_TOKEN_URL=https://app.wafeq.com/oauth/token/
WAFEQ_REVOKE_URL=https://app.wafeq.com/oauth/token/revoke/
WAFEQ_REDIRECT_URI=https://api.beatapp.io/api/oauth/wafeq/callback
WAFEQ_SCOPE=

# Optional but recommended: sign/verify OAuth state payload
OAUTH_STATE_SECRET=YOUR_RANDOM_LONG_SECRET
